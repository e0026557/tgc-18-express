{{#extends 'base'}}
{{#block 'content'}}

    <h1>Deleting Movie</h1>

    <form method="post">
        <div class="mt-3">
            Are you sure you want to delete "{{movie.title}}"?
        </div>

        <input type="submit" value="Delete" class="btn btn-danger mt-5">

        <!-- Cancel button that redirects to homepage -->
        <a href="/" class="btn btn-primary mt-5">Cancel</a>
    </form>

{{/block}}
{{/extends}}