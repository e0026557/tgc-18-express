{{#extends 'base'}}
{{#block 'content'}}

    <h1>Create Movie</h1>

    <form method="post">
        <div class="mt-3">
            <label>Movie title :</label>
            <input type="text" name="title" class="form-control" placeholder="Enter movie title">
        </div>

        <div class="mt-3">
            <label>Movie plot :</label>
            <input type="text" name="plot" class="form-control" placeholder="Enter movie plot">
        </div>

        <input type="submit" value="Submit" class="btn btn-primary mt-5">
    </form>

{{/block}}
{{/extends}}