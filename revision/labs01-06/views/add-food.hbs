{{#extends 'base'}}

{{#block 'title'}}
Lab 6
{{/block}}


{{#block 'content'}}
<form method="post">
    <div class="mt-3">
        <label class="form-label">Food name:</label>
        <input type="text" name="foodName" class="form-control">
    </div>

    <div class="mt-3">
        <label class="form-label">Calories</label>
        <input type="text" name="calories" class="form-control">
    </div>

    <div class="mt-3">
        <label class="form-label">Tags</label>
        <div class="ms-3">
            <input type="checkbox" name="tags" id="unhealthy-checkbox" value="unhealthy" class="form-check-input">
            <label for="unhealthy-checkbox" class="form-check-label">Unhealthy</label>
        </div>

        <div class="ms-3">
            <input type="checkbox" name="tags" id="snack-checkbox" value="snack" class="form-check-input">
            <label for="snack-checkbox" class="form-check-label">Snack</label>
        </div>

        <div class="ms-3">
            <input type="checkbox" name="tags" id="homecooked-checkbox" value="homecooked" class="form-check-input">
            <label for="homecooked-checkbox" class="form-check-label">Homecooked</label>
        </div>
    </div>

    <input type="submit" value="Add food" class="btn btn-primary mt-4">


</form>

{{/block}}

{{/extends}}