{{#extends 'base'}}

{{#block 'title'}}
Lost and Found
{{/block}}

{{#block 'content'}}
    <h1>Lost and Found</h1>

    <form method="post">
        <div class="mt-3">
            <label for="item" class="form-label">Name of item:</label>
            <input type="text" name="item" id="item" class="form-control">
            <span id="itemErrorMessage"></span>
        </div>

        <div class="mt-3">
            <label for="email" class="form-label">Email:</label>
            <input type="text" name="email" id="email" class="form-control">
            <span id="emailErrorMessage"></span>
        </div>

        <div class="mt-3">
            <label>Indicate where item was lost:</label>
            <span id="locationErrorMessage"></span>

            <input type="radio" name="location" id="taxi" value="taxi" class="form-check-input">
            <label for="taxi" class="form-check-label">Taxi</label>
            
            <input type="radio" name="location" id="bus" value="bus" class="form-check-input">
            <label for="bus" class="form-check-label">Bus</label>

            <input type="radio" name="location" id="mrt" value="mrt" class="form-check-input">
            <label for="mrt" class="form-check-label">MRT</label>

            <input type="radio" name="location" id="others" value="others" class="form-check-input">
            <label for="others" class="form-check-label">Others (Please indicate)</label>

            <input type="text" name="txtOthers" id="txtOthers" class="form-control" placeholder="Please indicate">
            <span id="txtOthersErrorMessage"></span>
        </div>

        <div class="mt-3">
            <label>Description of item: (Select 1 to 3 options)</label>
            <span id="descriptionErrorMessage"></span>

            <input type="checkbox" name="properties" id="bulky" value="bulky" class="form-check-input">
            <label for="bulky" class="form-check-label">Bulky</label>

            <input type="checkbox" name="properties" id="expensive" value="expensive" class="form-check-input">
            <label for="expensive" class="form-check-label">Expensive</label>

            <input type="checkbox" name="properties" id="colorful" value="colorful" class="form-check-input">
            <label for="colorful" class="form-check-label">Colorful</label>

            <input type="checkbox" name="properties" id="branded" value="branded" class="form-check-input">
            <label for="branded" class="form-check-label">Branded</label>

            <input type="checkbox" name="properties" id="small" value="small" class="form-check-input">
            <label for="small" class="form-check-label">Small</label>

            <input type="checkbox" name="properties" id="plain" value="plain" class="form-check-input">
            <label for="plain" class="form-check-label">Plain</label>
        </div>

        <input type="submit" value="Submit" class="btn btn-primary mt-4">
    </form>

{{/block}}

{{/extends}}