{{#extends 'base'}}

{{#block 'title'}}
All food records
{{/block}}

{{#block 'content'}}

<h1>All food records</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{!-- Iterate through each foodRecord object in foodRecords array --}}
        {{#each foodRecords}}
        <tr>
            <td>
                <a href="/food/{{this._id}}">{{this.foodName}}</a>
            </td>
            <td>{{this.calories}}</td>
            {{!-- Using 'join' handlebars-helpers to join tags array --}}
            <td>{{join this.tags ', '}}</td>
            <td>
                <a href="/food/{{this._id}}/edit" class="btn btn-primary btn-sm">Edit</a>
                <a href="/food/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                <a href="/food/{{this._id}}/notes/add" class="btn btn-primary btn-sm">Add Note</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}