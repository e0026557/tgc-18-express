{{#extends 'base'}}

{{#block 'title'}}
Edit Note
{{/block}}

{{#block 'content'}}

  <h1>Edit Note</h1>
  
  <form method="post">
    <div class="mt-3">
      <label class="form-label">Note:</label>
      <textarea name="content" cols="30" rows="10" class="form-control">{{note.content}}</textarea>
    </div>

    <input type="submit" value="Update" class="btn btn-primary mt-4">
  </form>

{{/block}}


{{/extends}}
