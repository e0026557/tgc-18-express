{{#extends 'base'}}

{{#block 'title'}}
Delete Food Sightings
{{/block}}

{{#block 'content'}}

    <form method="post">
        <div class="alert alert-danger">
            Are you sure you want to delete the food sighting {{sightings.description}} ?
        </div>

        <div class="nt-3">
            <input type="submit" value="Delete" class="btn btn-danger">
            <a href="/" class="btn btn-success">Cancel</a>
        </div>
    </form>

{{/block}}


{{/extends}}