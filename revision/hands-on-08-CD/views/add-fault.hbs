{{#extends 'base'}}

{{#block 'title'}}
Report a Fault
{{/block}}

{{#block 'content'}}
  <h1>Report a Fault</h1>

  <form method="post">
    <div class="mt-3">
      <label>Title</label>
      <input type="text" name="title" class="form-control">
    </div>
    <div class="mt-3">
      <label>Location:</label>
      <input type="text" name="location" class="form-control">
    </div>
    <div class="mt-3">
      <label>Tags:</label>

      <input type="checkbox" name="tags" class="form-check-input" id="urgent" value="urgent">
      <label for="urgent" class="form-check-label">Urgent</label>

      <input type="checkbox" name="tags" class="form-check-input" id="dangerous" value="dangerous">
      <label for="dangerous" class="form-check-label">Dangerous</label>

      <input type="checkbox" name="tags" class="form-check-input" id="equipment-fault" value="equipment-fault">
      <label for="equipment-fault" class="form-check-label">Equipment Fault</label>

      <input type="checkbox" name="tags" class="form-check-input" id="maintenance-related" value="maintenance-related">
      <label for="maintenance-related" class="form-check-label">Maintenance Related</label>

      <input type="checkbox" name="tags" class="form-check-input" id="infrastructure-related" value="infrastructure-related">
      <label for="infrastructure-related" class="form-check-label">Infrastructure Related</label>
    </div>
    <div class="mt-3">
      <label>Block Number:</label>

      <input type="radio" name="block" class="form-check-input" id="b304" value="304">
      <label for="b304" class="form-check-label">304</label>
      <input type="radio" name="block" class="form-check-input" id="b305" value="305">
      <label for="b305" class="form-check-label">305</label>

      <input type="radio" name="block" class="form-check-input" id="b306" value="306">
      <label for="b306" class="form-check-label">306</label>

      <input type="radio" name="block" class="form-check-input" id="b307" value="307">
      <label for="b307" class="form-check-label">307</label>

      <input type="radio" name="block" class="form-check-input" id="b307A" value="307A">
      <label for="b307A" class="form-check-label">307A</label>
    </div>
    <div class="mt-3">
      <label>Name of reporter:</label>
      <input type="text" name="name" class="form-control">
    </div>
    <div class="mt-3">
      <label>Email:</label>
      <input type="text" name="email" class="form-control">
    </div>

    <input type="submit" value="Submit report" class="btn btn-primary mt-4">
  </form>

{{/block}}

{{/extends}}