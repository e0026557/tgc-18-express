{{#extends 'base'}}
{{#block 'content'}}

    <h1>Food Sightings</h1>

    <a href="/food_sighting/create" class="btn btn-primary">Create food sightings</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Descriptions</th>
                <th>Food</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {{#each foodSightings}}
                <tr>
                    <!-- 'this' refers to each item in foodSightings array -->
                    <td>{{this._id}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.food}}</td>
                    <td>{{this.datetime}}</td>
                    <td>
                        <a href="/food_sighting/edit/{{this._id}}" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/food_sighting/delete/{{this._id}}" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{/block}}
{{/extends}}