{{#extends 'base'}}
{{#block 'content'}}

    <h1>Lost 'n' Found</h1>

    <form method="POST">
        <div id="container-item" class="mt-3">
            <label>Name of item: </label>
            <input type="text" name="item" id="item" class="form-control">
        </div>

        <div id="container-email" class="mt-3">
            <label>Email address: </label>
            <input type="email" name="email" id="email" class="form-control">
        </div>

        <div id="container-location" class="mt-3">
            <label>Indicate location where item was lost: </label>
            <br>

            <input type="radio" name="location" class="location form-check-input" value="taxi" checked>
            <label class="form-check-label">Taxi</label>

            <input type="radio" name="location" class="location form-check-input" value="bus">
            <label class="form-check-label">Bus</label>

            <input type="radio" name="location" class="location form-check-input" value="mrt">
            <label class="form-check-label">MRT</label>
        </div>
        
        <div id="container-properties" class="mt-3">
            <label>Select <strong>at most 3</strong> properties of lost item: </label>
            <br>

            <input type="checkbox" name="properties" class="properties form-check-input" value="bulky">
            <label class="form-check-label">Bulky</label>

            <input type="checkbox" name="properties" class="properties form-check-input" value="expensive">
            <label class="form-check-label">Expensive</label>

            <input type="checkbox" name="properties" class="properties form-check-input" value="colorful">
            <label class="form-check-label">Colorful</label>

            <input type="checkbox" name="properties" class="properties form-check-input" value="branded">
            <label class="form-check-label">Branded</label>

            <input type="checkbox" name="properties" class="properties form-check-input" value="small">
            <label class="form-check-label">Small</label>

            <input type="checkbox" name="properties" class="properties form-check-input" value="plain">
            <label class="form-check-label">Plain</label>

        </div>

        <input type="submit" class="btn btn-primary mt-5" value="Submit">

    </form>

{{/block}}
{{/extends}}